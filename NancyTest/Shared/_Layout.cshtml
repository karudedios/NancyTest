<!DOCTYPE html>

<html>
<head>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        html, body, header, footer, div, p, a  {
            margin: 0;
            padding: 0;
        }

        html, body {
            width: 100%;
            height: 100%;
            position: relative;
        }

        header, footer {
            padding: 10px;
            text-align: center;
            background: #1e3eff;
        }

        #mainSection {
            width: 100%;
            height: calc(100% - 96px);
            padding-top: 10px;
            padding-bottom: 10px;
            background: #1e90ff;
        }
    </style>
    @RenderSection("Header", false)
</head>
    <body>
        <header>
            Cabecera
        </header>

        <section id="mainSection">
            @RenderBody()
        </section>

        <footer>
            Pie de página
            @RenderSection("Scripts", false)
        </footer>
    </body>
</html>
